package body Semaphore is

   protected body Counting_Semaphore is

      entry Secure when Current_Count > 0 is
      begin
         Current_Count := Current_Count - 1;
      end Secure;

      procedure Release is
      begin
         Current_Count := Current_Count + 1;
      end Release;

      function Count return Integer is
      begin
         return Current_Count;
      end Count;

end Semaphore;
